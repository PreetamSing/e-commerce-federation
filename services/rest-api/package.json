{
  "name": "y_coin",
  "version": "0.0.0",
  "description": "Y Coin Backend Service",
  "main": "./build/index.js",
  "scripts": {
    "pm2:start": "npm run build:clean && pm2 start npm --name=\"Y Coin BE\" -- start",
    "pm2:restart": "pm2 restart \"Y Coin BE\"",
    "pm2:delete": "pm2 delete \"Y Coin BE\"",
    "start": "cross-env NODE_ENV=production node --no-warnings ./build/index.js",
    "dev": "nodemon --ext js,ts --exec ts-node -r tsconfig-paths/register -- ./src/index.ts",
    "build": "npx tsc",
    "build:clean": "rimraf build && npx tsc",
    "lint": "eslint --fix . --ext .ts",
    "copy-env": "cp .env.sample .env"
  },
  "author": "Preetam Singh Rathore",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cli-color": "^2.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "mongodb": "^3.6.11",
    "mongoose": "^5.13.5",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.28.3",
    "stripe": "^8.184.0",
    "web3-eth-accounts": "^1.6.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.171",
    "@types/mongodb": "^3.6.20",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "15.0.0",
    "@types/sharp": "^0.28.4",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-plugin-prettier": "^3.4.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "_moduleAliases": {
    "@modules": "build/modules",
    "@models": "build/models",
    "@config": "build/core/config",
    "@core": "build/core",
    "@mail": "build/mails",
    "@middlewares": "build/middlewares",
    "@helpers": "build/helpers",
    "@jobs": "build/jobs"
  }
}
